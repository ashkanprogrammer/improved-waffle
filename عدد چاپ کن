#include <iostream>
#include <string.h>
using namespace std;
int main()
{
    string a;
    cin>>a;
    for(int i=0;i<=a.size()-1;i++)
    {
        if(a[i]=='0')
        {
            cout<<"0: "<<endl;
        }
        if(a[i]=='1')
        {
            cout<<"1: 1"<<endl;
        }
        if(a[i]=='2')
        {
            cout<<"2: 22"<<endl;
        }
        if(a[i]=='3')
        {
            cout<<"3: 333"<<endl;
        }
        if(a[i]=='4')
        {
            cout<<"4: 4444"<<endl;
        }
        if(a[i]=='5')
        {
            cout<<"5: 55555"<<endl;
        }
        if(a[i]=='6')
        {
            cout<<"6: 666666"<<endl;
        }
        if(a[i]=='7')
        {
            cout<<"7: 7777777"<<endl;
        }
        if(a[i]=='8')
        {
            cout<<"8: 88888888"<<endl;
        }
        if(a[i]=='9')
        {
            cout<<"9: 999999999"<<endl;
        }
    }
}
